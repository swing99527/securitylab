# Database
POSTGRES_PASSWORD=secure_password_change_me_in_production
DATABASE_URL=postgresql+asyncpg://iot_user:secure_password_change_me_in_production@localhost:5432/iot_security_db

# Redis
REDIS_PASSWORD=redis_password_change_me
REDIS_URL=redis://:redis_password_change_me@localhost:6379/0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-characters-long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_BUCKET=iot-files
MINIO_USE_SSL=false

# Celery
CELERY_BROKER_URL=redis://:redis_password_change_me@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:redis_password_change_me@localhost:6379/2

# Application
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# CORS (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# API Gateway
API_GATEWAY_URL=http://localhost:8080

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
AUTH_RATE_LIMIT_PER_MINUTE=5

# Encryption (for sensitive data in database)
ENCRYPTION_KEY=your-32-byte-encryption-key-change-me-in-production

# Frontend URL (for email links, etc.)
FRONTEND_URL=http://localhost:3000
